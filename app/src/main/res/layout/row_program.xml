<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1sdp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageProgram"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/male"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/imageProgram"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtFestivalName"
                    fontPath="fonts/HindVadodara-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DHARAMVEER"
                    android:textColor="#000"
                    android:textSize="@dimen/_12sdp" />

                <com.mahashakti.AutoScrollableTextView
                    android:id="@+id/txtFestDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="5"
                    android:padding="@dimen/_10sdp"
                    android:scrollbars="vertical"
                    android:text="Take"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/calendar"
                            android:visibility="gone" />


                        <TextView

                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Start Date/Time"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/txtDate"
                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="sssss"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/txtTimeStart"
                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="sssss"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/time"
                            android:visibility="gone" />


                        <TextView
                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="End Date/Time"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/txtTime"
                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="ssssss"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/txtTimeEnd"
                            fontPath="fonts/HindVadodara-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ssssss"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Address"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp" />


                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/roundbtnbooking"
                        android:text="@string/booking"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnChat"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/roundbtnchat"
                        android:text="@string/chat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8sdp"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>