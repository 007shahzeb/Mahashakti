                <!--android:textSize="@dimen/_10sdp" />-->


                <EditText

                    android:id="@+id/edNewPsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="@color/grey"
                    android:hint="@string/newpassword"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/tomato"
                    android:textSize="@dimen/_10sdp"
                    app:animateCursor="true"
                    app:animateTextClear="true"
                    app:animationType="fromRight" />


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel">

                <!--<EditText-->
                <!--android:singleLine="true"-->
                <!--android:id="@+id/edPsw"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/_10sdp"-->
                <!--android:layout_marginRight="@dimen/_10sdp"-->
                <!--android:layout_marginTop="@dimen/_25sdp"-->
                <!--android:backgroundTint="@color/grey"-->
                <!--android:hint="@string/password"-->
                <!--android:inputType="textPassword"-->
                <!--android:paddingBottom="@dimen/_10sdp"-->
                <!--android:textColorHint="@color/tomato"-->
                <!--android:textSize="@dimen/_10sdp" />-->


                <EditText

                    android:id="@+id/edConfirmPsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:backgroundTint="@color/grey"
                    android:hint="@string/confirmpassword"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColorHint="@color/tomato"
                    android:textSize="@dimen/_10sdp"
                    app:animateCursor="true"
                    app:animateTextClear="true"
                    app:animationType="fromRight" />


            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_42sdp"
        android:background="@drawable/roundbtnchange"
        android:text="CHANGE"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:visibility="visible">


        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sign In"
            android:textColor="@color/tomato"
            android:textSize="15sp"
            fontPath="fonts/HindVadodara-Bold.ttf" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:visibility="gone">


        <TextView
            android:id="@+id/tvForgetPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/forgetpsw"
            android:textColor="@color/tomato"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/changePassword"
            android:textColor="@color/tomato"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>


</RelativeLayout>