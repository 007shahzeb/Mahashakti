<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/linearHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="#c4311d"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/backarrowwhite" />


            <TextView

                fontPath="fonts/HindVadodara-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BLOG DETAILS"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvTitleBlog"
            fontPath="fonts/HindVadodara-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearHeader"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:id="@+id/imgBlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleBlog"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/tvDescriptionBlog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@+id/imgBlog"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scrollbars="vertical"
            android:text="Description"
            android:textColor="#000" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/tvCommentsBlog"
            fontPath="fonts/HindVadodara-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescriptionBlog"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Comments"
            android:textColor="#000" />


        <android.support.v7.widget.RecyclerView

            android:id="@+id/rvBlogDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCommentsBlog" />


        <EditText
            android:id="@+id/edChatBlog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_41sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ed_chat_bg"
            android:hint="Add a comment here.."
            android:textColor="#fff"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/_12sdp" />


        <RelativeLayout
            android:id="@+id/imgSendChatBlog"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_41sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/signupbtncolor">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sendchat" />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>