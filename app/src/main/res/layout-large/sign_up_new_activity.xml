<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRegisterLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@drawable/mahashaktibg"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/backarrowwhite" />



                <ImageView
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/logomahashakti"
                    />

            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_210sdp"
        android:elevation="20dp"
        android:layout_marginBottom="@dimen/_50sdp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingBottom="@dimen/_50sdp"
            android:paddingTop="@dimen/_20sdp"
            >


            <EditText
                android:id="@+id/edUserName"
                android:hint="@string/fullname"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:backgroundTint="@color/grey"/>


            <EditText
                android:id="@+id/edEmail"
                android:hint="@string/emailaddress"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:backgroundTint="@color/grey"/>



            <EditText
                android:id="@+id/edPsword"
                android:hint="@string/password"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"

                android:textSize="@dimen/_10sdp"
                android:backgroundTint="@color/grey"/>




            <EditText
                android:id="@+id/edConfirmPsw"
                android:hint="@string/confirmpsw"
                android:textColorHint="@color/tomato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"

                android:backgroundTint="@color/grey"/>






        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbtnlogin"
        android:text="@string/signup"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:elevation="10dp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_410sdp"
        android:textColor="@color/white" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        >


        <TextView
            android:id="@+id/tvForgetPsw"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/tomato"
            android:text="@string/haveanaccount"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/signin"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"/>





    </LinearLayout>






</RelativeLayout>